@model List<_Nisab_Calculator.Models.Comment>

<!DOCTYPE html>
<html>
<head>
    <title>Calculator</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyEGlfEY93mdbe1pgpDQByPW6SA1c2M6L" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css"
          integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #01796F;
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                font-size: 200%;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover {
                    background-color: #4BA47E;
                }

        * {
            box-sizing: border-box;
        }

       

        .baslık {
            margin-left: 50px;
            margin-right: 0px;
            color: #01796F;
        }

       /*  .container {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 0px;
            margin: 0px;
            top: 0px;
        } */


        .content {
            display: inline-flex;
            align-items: center;
            vertical-align: middle;
        }

            .content img {
                width: 40px;
                height: 40px;
                margin-right: .6rem;
            }

           

        .checked {
            color: orange;
        }

        .btn-light:hover {
            border-color: #c1c9d0;
            color: #0d6efd;
        }

        .form-control, .form-select {
            background-color: #f9f9f9;
        }

    </style>
</head>
<body>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var userId = ""; // Gerçek kullanıcı kimliğini atamalısınız.
            var form = document.getElementById("commentForm");
            form.action = "comment/" + userId;
        });
    </script>
    <div>
        <ul>
            <li><a class="active" href="/">Anasayfa</a></li>
            <li><a href="/Zekat">Zekat</a></li>
            <li><a href="Fidye">Fidye</a></li>
            <li><a href="/About">Hakkımızda</a></li>

        </ul>
        <h1 class="baslık">
            Bu sayfada ihtiyaç sahipleriyle iletişime geçebilirsiniz.
        </h1>

        <section class="bg-light" id="comments">
            <div class="container">
                <div class="row py-4">
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-body">
                                @foreach (var item in Model)
                                {
                                <h5 class="card-title">Yorumlar</h5>
                                <hr>
                                <blockquote class="border-bottom">
                                    <div class="float-end">
                                        <div class="btn-group">
                                            
                                        </div>
                                        <button class="btn btn-light btn-sm">
                                            <i class="fa fa-ellipsis-v"></i>
                                        </button>
                                    </div>
                                    
                                    <div class="mt-3">
                                        
                                           
                                            <div class="content">
                                                <div class="text">
                                                    <h6 class="mb-0">@item.User.username</h6>
                                                </div>
                                            </div>
                                                <p>@item.Content</p>
                                               
                                            </div>
                                </blockquote>
}
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <h5 class="mb-3">Yorum Yap</h5>
                                
                                <form action="/user/commentPage">
                                    <input type="submit" value="Visit Website" />
                                </form>
                                
                            </div>
                        </div>
                    </div>
                             <div>
                              <p class="mt-1 text-muted">125 yorum</p>
                             </div>
                        </div>
                    </div>
                </div>
            </div>


        </section>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

        <script>
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        </script>
        @foreach (var item in Model)
        {
            <li>@item.Content</li>

        }
    </div>
    }
</body>
</html>



