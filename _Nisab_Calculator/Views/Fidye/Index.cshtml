@model _Nisab_Calculator.Models.FidyeCalculatorDto

<!DOCTYPE html>
<html>
<head>
    <title>Calculator</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyEGlfEY93mdbe1pgpDQByPW6SA1c2M6L" crossorigin="anonymous">

    <style>
        body {
            margin: 0;
            padding: 0;
            box-spacing: border-box;
        }
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden; 
            background-color: #01796F;
           
        }

        li {
            float: left;
            
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                font-size:200%;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover {
                    background-color: #4BA47E;
                }
       
* {
  box-sizing: border-box;
}
img {
            margin: 0px;
            padding:0px;
            margin-left:40px;
}

input[type=text], select, textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  resize: vertical;
}

.baslık{
            margin-left: 250px;
            margin-right: auto;
            width: 50em;
             color: #01796F;
}

.metin{
           font-size:35px;
           color: #01796F;
           top:100px;
           bottom:100px;
}

 .son{
            background-color: #01796F;
         
 }

 .son p{
     font-size:20px;
     color:white;
     
 }

label {
  padding: 12px 12px 12px 0;
  display: inline-block;
}

button[type=submit] {
  background-color: #04AA6D;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  float: right;
}

button[type=submit]:hover {
  background-color: #45a049;
}

.container {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 0px;
  margin: 0px;
  top:0px;
}

.col-25 {
  float: left;
  width: 25%;
  margin-top: 6px;
}

.col-75 {
  float: left;
  width: 75%;
  margin-top: 6px;
}

.row::after {
  content: "";
  display: table;
  clear: both;
}

</style>
</head>

<body>

    <form id="calculate" method="post" action="Fidye/calculateFidye">
        <div class="form-group">
            <h1>Fidye x y z ürünleri ile verilir. Fidyenizi vermek için kaç kişi adına vermek istediğinizi girin.</h1>
            <label for="AileÜyesi">Kaç kişi için fidye vermek istiyorsunuz?</label>
            <input type="text" class="form-control" name="AileÜyesi" placeholder="Kişi Sayısı" />

        </div>
        <!-- Diğer input alanlarını buraya ekle -->
        <br />
        <div class="row">
            <button type="submit" class="btn btn-primary">Hesapla</button>
        </div>
    </form>
    <form action="/Fidye" method="get">

        <button type="submit">Yeniden hesaplamak için tıkla.</button>
    </form>
    @if (Model != null && Model.AileÜyesi != 0)
    {
        <div class="alert alert-success mt-3" role="alert">
            Vermeniz gereken miktar toplam miktar @Model.AileÜyesi kişi için
            Arpa: @Model.ArpaFiyatı,
            Un:@Model.UnFiyatı,
            Hurma:@Model.HurmaFiyatı,
            Buğday: @Model.BuğdayFiyatı,
            Kuru üzüm: @Model.KuruÜzümFiyatı
        </div>
        <h3>Bu ürünlerin fiyatları piyasa ortalamasına göre alınmıştır.</h3>
    }
    else
    {
        <div class="alert alert-info mt-3" role="alert">
            Lütfen Giriş yapınız.
        </div>
    }
    
</body>
</html>
