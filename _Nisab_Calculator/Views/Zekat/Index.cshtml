@model _Nisab_Calculator.Models.CalculateDto

<!DOCTYPE html>
<html>
<head>
    <title>Calculator</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyEGlfEY93mdbe1pgpDQByPW6SA1c2M6L" crossorigin="anonymous">

    <style>
        body {
            margin: 0;
            padding: 0;
            box-spacing: border-box;
        }
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden; 
            background-color: #01796F;
           
        }

        li {
            float: left;
            
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                font-size:200%;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover {
                    background-color: #4BA47E;
                }
       
* {
  box-sizing: border-box;
}


input[type=text], select, textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  resize: vertical;
}

label {
  padding: 12px 12px 12px 0;
  display: inline-block;
}

button[type=submit] {
  background-color: #04AA6D;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  float: right;
}

button[type=submit]:hover {
  background-color: #45a049;
}

.container {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 0px;
  margin: 0px;
  top:0px;
}

.col-25 {
  float: left;
  width: 25%;
  margin-top: 6px;
}

.col-75 {
  float: left;
  width: 75%;
  margin-top: 6px;
}

.row::after {
  content: "";
  display: table;
  clear: both;
}

</style>
</head>
<body >
    <div class="container mt-5">
        <ul>
            <li><a class="active" href="/">Anasayfa</a></li>
            <li><a href="/Zekat">Zekat</a></li>
            <li><a href="Fidye">Fidye</a></li>
            <li><a href="/About">Hakkımızda</a></li>
            <li><a href="/Comment/GetComments">Yardımlar</a></li>
            <li><a href="/User/login">Giriş yap</a></li>
            <li><a href="/User/add">Kayıt ol</a></li>


        </ul>
        
        <form method="post" action="Zekat/calculateNisap">
            <div class="form-group">
                <label for="DolarAdet">Dolar Adet:</label>
                <input type="text" class="form-control" name="DolarAdet" placeholder="Your Dolar..." />

                <label for="SterlinAdet">Sterlin Adet:</label>
                <input type="text" class="form-control" name="SterlinAdet" placeholder="Your Sterlin..." />

                <label for="EuroAdet">Euro Adet:</label>
                <input type="text" class="form-control" name="EuroAdet" placeholder="Your Euro..." />

                <label for="GramAltınAdet">GramAltın Adet:</label>
                <input type="text" class="form-control" name="GramAltınAdet" placeholder="Your Gram Altın..." />

                <label for="BtcAdet">Btc Adet:</label>
                <input type="text" class="form-control" name="BtcAdet" placeholder="Your BTC..." />

                <label for="EthAdet">Eth Adet:</label>
                <input type="text" class="form-control" name="EthAdet" placeholder="Your ETH..." />

                <label for="XRPAdet">XRP Adet:</label>
                <input type="text" class="form-control" name="XRPAdet" placeholder="Your XRP..." />
            </div>

            <br />
            <div class="row">
                <button type="submit" class="btn btn-primary">Hesapla</button>
            </div>
        </form>
        <form class="try" action="/Zekat" method="get">
            <button type="submit">Yeniden hesaplamak için tıkla.</button>
        </form>
        
        @if (Model != null && Model.isMalik)
        {
            <div class="alert alert-success mt-3" role="alert">
                Toplam değer 80.18'den büyük! Maliksiniz.
                Vermeniz gereken miktar toplam @Model.zekat banknot  ya da ederinde gram altın karşılıklarını verebilirsiniz.
            </div>
        }
        else
        {
            <div class="alert alert-info mt-3" role="alert">
                Toplam değer 80.18'den küçük veya eşit.
            </div>
        }

         

    </div>

</body>
</html>
